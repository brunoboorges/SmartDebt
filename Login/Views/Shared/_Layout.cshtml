@model IEnumerable<Login.Models.Debt>
@using System.Linq;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/style/font-awesome.min.css" rel="stylesheet" />
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />



    @RenderSection("cabecalho", required: false)
</head>
<body style="background-color:#F5F6FC; " class="p-3 ">


    <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded">
        @Html.ActionLink("Minhas Dívidas", "Debts", "Debts", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Sobre", "About", "Home", new { area = "" }, new { @class = "text-light, nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contato", "Contact", "Home", new { area = "" }, new { @class = "text-light, nav-link" })
                </li>
                    
            </ul>
            <p class="nav-link text-light font-weight-bold p-0 m-0 mr-5">Bem vindo, @Session["UsuarioLogadoID"]</p>
            <ul class="navbar-nav mr-5">

                <li class="nav-item text-right">
                    @Html.ActionLink("Sair", "Login", "Login", new { area = "" }, new { @class = "text-light  nav-link" })
                </li>
            </ul>
        </div>
    </nav>




    <div class="container body-content col-lg-12">

        @RenderBody()


        @RenderSection("Tabela", required: false)

        <footer>
        </footer>
    </div>





    
</body>
@Scripts.Render("~/scriptapp")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</html>
