@model Login.Models.Usuario

@{ 
    Layout = "~/Views/LoginPage.cshtml";
}

    <div class="form-inner-cont ">
        <h3>Cadastre-se</h3>


        <form action="SignUp" method="post" class="signin-form">


            <div class="form-input">
                <span class="fa fa-envelope-o" aria-hidden="true"></span> <input type="text" name="nome"
                                                                                 placeholder="Digite Seu Login" required />
            </div>
            <div class="form-input">
                <span class="fa fa-key" aria-hidden="true"></span> <input type="password" name="password" placeholder="Digite sua senha"
                                                                          required />
            </div>
            <div class="form-input">
                <span class="fa fa-key" aria-hidden="true"></span> <input type="password" name="secondPass" placeholder="Repita sua senha"
                                                                          required />
            </div>

            <div>
                <h3>@ViewBag.Message</h3>
            </div>

            <div class="login-remember d-grid m-5">
                <button type="submit" class="btn theme-button">Cadastre</button>
            </div>





        </form>

        <form action="SignUp" method="post">
            <p class="signup">Já tem uma conta? @Html.ActionLink("Logue-se", "Login", "Login")</p>
        </form>


    </div>