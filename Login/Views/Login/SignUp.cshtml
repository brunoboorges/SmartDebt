@model Login.Models.Usuario

@{
    Layout = "~/Views/LoginPage.cshtml";
}

    <section class="container-fluid bg">
        <div class="row justify-content-center">



            <div class=" text-center mt-5">



                <form action="SignUp" method="post" class="form-container">
                    <h3>Logue-se</h3>

                    <div class="form-group mt-3">
                        <label for="exampleDropdownFormEmail1">Usuário</label>
                        <input type="text" name="nome" class="form-control" placeholder="Usuario" required />
                    </div>

                    <div class="form-group">
                        <label for="exampleDropdownFormPassword1">Senha</label>
                        <input type="password" name="password" placeholder="Senha" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="exampleDropdownFormPassword1">Repita sua senha</label>
                        <input type="password" name="secondPass" placeholder="Repita sua senha" class="form-control" required />
                    </div>

                    <div>
                        <h3>@ViewBag.Message</h3>
                    </div>

                    <div class="login-remember d-grid m-5">
                        <button type="submit" class="btn btn-primary">Cadastre</button>
                    </div>



                    <form action="SignUp" method="post">
                        <p class="signup">Já tem uma conta? @Html.ActionLink("Logue-se", "Login", "Login")</p>
                    </form>

                </form>







            </div>
        </div>

    </section>