
@model IEnumerable<Login.Models.Usuario>



@{
    int i = 0;
}

@foreach (var receita in Model)
{
    
    if (i < 1)
    {
        @Html.Partial("AdicionarOutrasReceitas", receita);
    }
    i++;
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OtReceitasNome)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.OutrasReceitas)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr class="m3 table-bordered">

            <td class="text-capitalize font-weight-bolder" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                @Html.DisplayFor(modelItem => item.OtReceitasNome)
            </td>
            <td class="text-capitalize font-weight-bolder" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                @Html.DisplayFor(modelItem => item.OutrasReceitas)
            </td>

            <td>

                
                    @using (Html.BeginForm("OtDelete", "Debts", new { id = item.OtId }))
                    {
                        <div>
                            <button class="btn btn-danger" type="submit" name="@item.OtId">
                                Deletar
                            </button>
                        </div>
                    }
                

            </td>
        </tr>


    }


</table>



