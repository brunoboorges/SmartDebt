@model Login.Models.Usuario


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-body text-center mb-3">Insira o valor da sua receita mensal</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        
        <div class="form-group">
            <div class="row justify-content-center mb-2">
                <div class="col-md-10 justify-content-center" align="center">
                    @Html.EditorFor(model => model.Receita, new { htmlAttributes = new { @class = "form-control " } })
                    @Html.ValidationMessageFor(model => model.Receita, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group " align="center">
            <div class="col-md-offset-2 col-md-10 ">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
